# Production Environment Variables Template
# CRITICAL: All values MUST be changed before deployment
# Copy this file to .env and set real production values

# Django Configuration
SECRET_KEY=CHANGE_THIS_TO_RANDOM_50_CHAR_STRING
DJANGO_ENV=production
DEBUG=False

# ALLOWED_HOSTS: Comma-separated list of hostnames/IPs Django will accept
# CRITICAL: Must be set in production (application won't start if empty)
# SECURITY: Wildcard (*) is blocked in production by validation logic
# 
# Examples:
#   Single domain:        DJANGO_ALLOWED_HOSTS=korrigo.education.fr
#   Domain + www:         DJANGO_ALLOWED_HOSTS=korrigo.education.fr,www.korrigo.education.fr
#   Multiple subdomains:  DJANGO_ALLOWED_HOSTS=app.example.com,api.example.com
#   With IP (staging):    DJANGO_ALLOWED_HOSTS=staging.example.com,192.168.1.100
#   Behind load balancer: DJANGO_ALLOWED_HOSTS=example.com,10.0.1.50
#
# NOTE: In settings_prod.py, this variable is named DJANGO_ALLOWED_HOSTS (not ALLOWED_HOSTS)
DJANGO_ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Database Configuration
DB_NAME=korrigo_prod
DB_USER=korrigo_user
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
DB_HOST=db
DB_PORT=5432
DB_CONN_MAX_AGE=60

# Security Settings
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=true
SECURE_HSTS_PRELOAD=true
SSL_ENABLED=true

# Rate Limiting
RATELIMIT_ENABLE=true

# Logging
DJANGO_LOG_LEVEL=INFO

# Email Configuration (for error notifications)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=CHANGE_THIS
ADMINS=admin@example.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-domain.com

# Media Storage (if using S3)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_REGION_NAME=

# GitHub Container Registry (for image pulls)
# GITHUB_REPOSITORY_OWNER=your-org
# KORRIGO_SHA=latest
