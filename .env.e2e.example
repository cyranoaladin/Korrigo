# E2E Testing Environment Configuration
# Docker Compose prod-like environment with E2E contract

# Django Configuration
DEBUG=false
E2E_TEST_MODE=true
DJANGO_ENV=development

# Security: Origin unique en E2E (reverse proxy)
ALLOWED_HOSTS=localhost,127.0.0.1,nginx,backend
CSRF_TRUSTED_ORIGINS=http://localhost:8088,http://127.0.0.1:8088
CORS_ALLOWED_ORIGINS=http://localhost:8088,http://127.0.0.1:8088

# Cookie Configuration
SESSION_COOKIE_SAMESITE=Lax
CSRF_COOKIE_SAMESITE=Lax
SESSION_COOKIE_SECURE=false
CSRF_COOKIE_SECURE=false

# E2E Credentials Contract (seed + tests)
E2E_ADMIN_USERNAME=admin
E2E_ADMIN_PASSWORD=admin

E2E_TEACHER_USERNAME=prof1
E2E_TEACHER_PASSWORD=password

E2E_STUDENT_INE=123456789
E2E_STUDENT_LASTNAME=E2E_STUDENT
E2E_STUDENT_BIRTH_DATE=2005-06-15

# Playwright Configuration
E2E_BASE_URL=http://localhost:8088

# Database (Docker Compose interne)
POSTGRES_DB=viatique_local
POSTGRES_USER=viatique_user
POSTGRES_PASSWORD=viatique_password

# Rate Limiting (désactivé pour E2E)
RATELIMIT_ENABLE=false
