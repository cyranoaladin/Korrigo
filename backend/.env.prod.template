# Production Environment Configuration Template
# COPY THIS FILE TO .env AND EDIT FOR PRODUCTION

# ------------------------------
# Core Settings
# ------------------------------
DJANGO_ENV=production
DEBUG=False
SECRET_KEY=__CHANGE_ME_TO_A_VERY_LONG_RANDOM_STRING__

# Comma-separated list of valid domains (e.g., viatique.education.fr)
ALLOWED_HOSTS=viatique.example.com,api.viatique.example.com

# ------------------------------
# Security & SSL
# ------------------------------
# Set to "True" if served behind HTTPS (enables HSTS, Secure Cookies, etc.)
SSL_ENABLED=True

# ------------------------------
# Database (PostgreSQL)
# ------------------------------
POSTGRES_DB=viatique
POSTGRES_USER=viatique_user
POSTGRES_PASSWORD=__CHANGE_ME_STRONG_PASSWORD__
POSTGRES_HOST=db
POSTGRES_PORT=5432

# ------------------------------
# Redis & Celery
# ------------------------------
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ------------------------------
# CORS & CSRF
# ------------------------------
# Origins allowed to make Cross-Origin requests (Frontend URL)
CORS_ALLOWED_ORIGINS=https://viatique.example.com
# Origins trusted for CSRF (Frontend URL)
CSRF_TRUSTED_ORIGINS=https://viatique.example.com

# ------------------------------
# Email (SMTP)
# ------------------------------
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=__API_KEY__
SERVER_EMAIL=no-reply@viatique.example.com
ADMIN_EMAIL=admin@viatique.example.com

# ------------------------------
# Feature Flags
# ------------------------------
RATELIMIT_ENABLE=True
E2E_TEST_MODE=False
METRICS_TOKEN=__CHANGE_ME_METRICS_TOKEN__

# ------------------------------
# OpenAI API (GPT-4 Vision OCR)
# ------------------------------
OPENAI_API_KEY=__CHANGE_ME_OPENAI_API_KEY__
OPENAI_MODEL=gpt-4.1-mini-2025-04-14
